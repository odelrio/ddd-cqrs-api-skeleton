{
  "name": "odelrio/php-ddd-cqrs-api-skeleton",
  "type": "project",
  "license": "MIT",
  "description": "A bootstrap to start writing API applications in PHP applying DDD, CQRS and Hexagonal Architecture",
  "minimum-stability": "dev",
  "require": {
    "php": "^7.1.3",
    "Lambdish/phunctional": "^1.0"
  },
  "autoload": {
    "psr-4": {
      "Skeleton\\": "skeleton/src/"
    }
  },
  "scripts": {
    "post-create-project-cmd": "skeleton/install.php",
    "cs": "./vendor/bin/phpcs --standard=PSR12 --report-width=180 skeleton",
    "csfix": "./vendor/bin/phpcbf --standard=PSR12 skeleton"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "*"
  }
}
